<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.reg.RegisterActivity">
    <com.example.framwork.view.TobView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:left_show="true"
        app:backgroundColor="#142732"
        app:textColor="#27b8ee"
        app:left_img="@mipmap/left"
        android:id="@+id/tob"
        app:text="用户注册"></com.example.framwork.view.TobView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/phoneNum"
            android:textColor="#000000"></TextView>

        <EditText
            android:id="@+id/phone"
            android:layout_width="@dimen/dp_0"
            android:layout_height="64dp"
            android:layout_weight="@dimen/weight_8"
            android:hint="@string/PleasePhoneNum"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/user"
            android:textColor="#000000"></TextView>
        <EditText
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:hint="@string/PleaseUser"
            android:id="@+id/use"
            android:layout_weight="@dimen/weight_8"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="@dimen/weight_2"
            android:gravity="center"
            android:text="@string/password"

            android:textColor="#000000"></TextView>
        <EditText
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:hint="@string/PleasePassword"
            android:id="@+id/pwd"
            android:layout_weight="@dimen/weight_8"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="@dimen/weight_2"
            android:gravity="center"
            android:text="@string/ConfigPwd"
            android:textColor="#000000"></TextView>
        <EditText
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:hint="@string/ConfigPhone"
            android:id="@+id/reuse_phone"
            android:layout_weight="@dimen/weight_8"></EditText>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <Button
            android:layout_width="@dimen/dp_230"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#27baed"
            android:text="@string/reg"
            android:id="@+id/register"
            android:textColor="#ffffff"
            ></Button>
    </RelativeLayout>
</LinearLayout>