<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".mine.MineFragment">


    <com.example.framework.view.ToolBar
        android:id="@+id/toolbar"
        app:app_text="@string/mian_money"
        app:app_back_color_toob="@color/light_black"
        app:app_text_color="@color/blue"
        app:app_right_src="@drawable/my_setting_icon"
        app:app_right_isshow="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_px_300">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/mine_head"
                android:src="@drawable/my_user_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/mine_name"
                android:layout_gravity="center"
                android:text="@string/mine_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_px_500">
        <TextView
            android:text="@string/mine_notify"
            android:layout_margin="@dimen/dm_px_30"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="@dimen/dm_px_20"
            android:text="@string/mine_content"
            android:layout_marginTop="@dimen/dm_px_100"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="@dimen/dm_px_20"
            android:text="@string/mine_business"
            android:layout_marginTop="@dimen/dm_px_160"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dm_px_40"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="@dimen/dm_px_30"
                android:src="@drawable/my_recharge_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginLeft="@dimen/dm_px_30"
                android:src="@drawable/my_withdraw_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <com.example.framework.view.ItemBar
        app:app_item_text="@string/mine_invest"
        app:app_item_text_size="@dimen/mine_item_textsize"
        app:app_item_left_src="@drawable/my_invest_manage"
        app:app_item_right_src="@drawable/right"
        style="@style/showLeftRightShow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_item_height"/>
    <View
        android:layout_below="@id/center_item_title"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wel_view_height_dp_1dp"/>
    <com.example.framework.view.ItemBar
        app:app_item_text="@string/mine_reward"
        app:app_item_left_src="@drawable/my_reward_manage"
        app:app_item_right_src="@drawable/right"
        style="@style/showLeftRightShow"
        android:layout_width="match_parent"
        app:app_item_text_size="@dimen/mine_item_textsize"
        android:layout_height="@dimen/mine_item_height"/>
    <View
        android:layout_below="@id/center_item_title"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wel_view_height_dp_1dp"/>
    <com.example.framework.view.ItemBar
        app:app_item_text="@string/mine_asset"
        app:app_item_left_src="@drawable/my_asset_manage"
        app:app_item_right_src="@drawable/right"
        app:app_item_text_size="@dimen/mine_item_textsize"
        style="@style/showLeftRightShow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_item_height"/>
    <View
        android:layout_below="@id/center_item_title"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wel_view_height_dp_1dp"/>
</LinearLayout>