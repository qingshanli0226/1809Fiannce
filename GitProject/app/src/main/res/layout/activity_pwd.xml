<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".more.password.PwdActivity">
    <com.example.framework.view.ToolBar
        android:id="@+id/toolbar"
        app:app_text="@string/pwd_title"
        app:app_back_color_toob="@color/light_black"
        app:app_text_color="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.wangnan.library.GestureLockView
        android:id="@+id/gle"
        app:line_thickness="@dimen/pwd_line_width"
        app:normal_color="@color/black"
        app:press_color="@color/red"
        app:error_color="@color/error_red"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>