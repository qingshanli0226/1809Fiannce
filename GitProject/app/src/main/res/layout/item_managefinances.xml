<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dm_px_20"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/dm_px_20">
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_px_100">

                <TextView
                    android:id="@+id/finances_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dm_px_40"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dm_px_60"></TextView>

                <ImageView
                    android:layout_width="@dimen/dm_px_30"
                    android:layout_height="@dimen/dm_px_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dm_px_40"
                    android:src="@drawable/right"></ImageView>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_px_1"
                android:layout_gravity="center"
                android:background="@color/gray"></View>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/dm_px_800"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/dm_px_20"
                        android:layout_marginTop="@dimen/dm_px_30"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/finances_item_money"></TextView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dm_px_10">

                            <TextView
                                android:id="@+id/finances_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/red"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/finances_item_unit"></TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dm_px_20">


                            <ImageView
                                android:layout_marginTop="@dimen/dm_px_10"
                                android:layout_width="@dimen/dm_px_30"
                                android:layout_height="@dimen/dm_px_30"
                                android:layout_marginLeft="@dimen/dm_px_10"
                                android:src="@drawable/product_part1_icon"></ImageView>

                            <TextView
                                android:id="@+id/finances_minTouMoney"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dm_px_10"></TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/dm_px_70"
                        android:layout_marginTop="@dimen/dm_px_30"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_year"></TextView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dm_px_10">

                            <TextView
                                android:id="@+id/finances_yeatRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/red"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/finances_item_unit"></TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dm_px_10">
                            <ImageView
                                android:layout_marginTop="@dimen/dm_px_10"
                                android:layout_width="@dimen/dm_px_30"
                                android:layout_height="@dimen/dm_px_30"
                                android:layout_marginLeft="@dimen/dm_px_10"
                                android:src="@drawable/product_part3_icon"></ImageView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dm_px_10"
                                android:text="@string/home_one_btn"></TextView>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/dm_px_100"
                        android:layout_marginTop="@dimen/dm_px_30"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dm_px_10"
                            android:text="@string/finances_item_lock"></TextView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dm_px_40"
                            android:layout_marginTop="@dimen/dm_px_10">

                            <TextView
                                android:id="@+id/finances_suodingDays"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/red"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/finances_item_unit"></TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dm_px_10">
                            <ImageView
                                android:layout_marginTop="@dimen/dm_px_10"

                                android:layout_width="@dimen/dm_px_40"
                                android:layout_height="@dimen/dm_px_40"
                                android:layout_marginLeft="@dimen/dm_px_10"
                                android:src="@drawable/product_part4_icon"></ImageView>

                            <TextView
                                android:id="@+id/finances_memberNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dm_px_10"></TextView>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <com.example.framework.view.ProgressView
                        android:id="@+id/finances_progress"
                        android:layout_width="@dimen/dm_px_150"
                        android:layout_height="@dimen/dm_px_150"
                        app:app_color="#03A9F4"
                        app:app_textsize="@dimen/dm_px_30"></com.example.framework.view.ProgressView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
            <TextView
                android:id="@+id/item_del"
                android:text="@string/finances_del"
                android:gravity="center"
                android:background="@color/red"
                android:layout_width="@dimen/dm_px_100"
                android:layout_height="@dimen/dm_px_300"></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>