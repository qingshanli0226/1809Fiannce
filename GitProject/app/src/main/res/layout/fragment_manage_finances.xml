<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".invest.manageFinances.ManageFinancesFragment">
    <com.example.framework.view.ToolBar
        android:id="@+id/toolbar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/finances_lamp"
            android:textColor="@color/red"
            android:textSize="@dimen/dm_dp_30"
            android:text="@string/finances_lamp"
            android:singleLine="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/finances_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <TextView
        android:id="@+id/finances_connect"
        android:textColor="@color/red"
        android:textSize="@dimen/dm_dp_50"
        android:layout_marginTop="@dimen/dm_dp_75"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>