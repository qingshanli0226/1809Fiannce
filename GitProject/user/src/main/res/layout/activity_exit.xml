<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".exitlogin.ExitActivity">
    <com.example.framework.view.ToolBar
        android:id="@+id/toolbar"
        app:app_text="@string/exit_user"
        app:app_text_color="@color/blue"
        app:app_back_color_toob="@color/light_black"
        app:app_left_isshow="true"
        app:app_left_src="@drawable/left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/exit_height">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/exit_head"
                android:src="@drawable/my_user_bg_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/exit_name"
                android:textSize="@dimen/dm_dp_25"
                android:layout_gravity="center"
                android:text="@string/exit_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>
    <Button
        android:id="@+id/exit"
        android:text="@string/exit_btn"
        android:textColor="@color/white"
        android:background="@drawable/register_btn"
        android:layout_marginTop="@dimen/dm_dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>