<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".register.RegisterActivity">
    <com.example.framework.view.ToolBar
        android:id="@+id/toolbar"
        app:app_text="@string/register_btn_name"
        app:app_text_color="@color/blue"
        app:app_left_isshow="true"
        app:app_left_src="@drawable/left"
        app:app_back_color_toob="@color/light_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/register_photo"
            android:layout_width="@dimen/text_weight_dp"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@drawable/blank_edit"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/register_phone"
            android:hint="@string/register_photo_edit"
            android:inputType="number"
            android:layout_weight="8"
            android:background="@drawable/blank_edit"
            android:layout_width="@dimen/text_weight_dp"
            android:layout_height="@dimen/edit_height_dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/register_user"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="@dimen/text_weight_dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/register_name"
            android:hint="@string/register_user_edit"
            android:layout_weight="8"
            android:layout_width="@dimen/text_weight_dp"
            android:background="@drawable/blank_edit"
            android:layout_height="@dimen/edit_height_dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/register_pwd"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="@dimen/text_weight_dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/register_pwd"
            android:hint="@string/register_pwd_edit"
            android:background="@drawable/blank_edit"
            android:layout_weight="8"
            android:layout_width="@dimen/text_weight_dp"
            android:layout_height="@dimen/edit_height_dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/register_yes_pwd"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="@dimen/text_weight_dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/register_yes_pwd"
            android:hint="@string/register_yes_pwd_edit"
            android:background="@drawable/blank_edit"
            android:layout_weight="8"
            android:layout_width="@dimen/text_weight_dp"
            android:layout_height="@dimen/edit_height_dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/register"
        android:text="@string/register_btn_name"
        android:textColor="@color/white"
        android:layout_margin="@dimen/dm_px_50"
        android:background="@drawable/register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>