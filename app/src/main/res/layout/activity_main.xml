<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:id="@+id/main_ll"
        android:orientation="horizontal"
        ></LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/group"
        >
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/home_radio"
            android:text="首页"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/home_radio"
            ></RadioButton>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/investment_radio"
            android:text="投资"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/investment_radio"
            ></RadioButton>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/property_radio"
            android:text="我的资产"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/property_radio"
            ></RadioButton>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/more_radio"
            android:text="更多"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/more_radio"
            ></RadioButton>
    </RadioGroup>



</LinearLayout>