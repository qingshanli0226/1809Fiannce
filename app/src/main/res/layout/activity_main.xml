<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <com.finance.framework.view.ToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:rightIsShow="true"
        app:leftImg="@mipmap/left"
        app:leftIsShow="false"
        app:titleText="首页"
        android:layout_height="60dp">
    </com.finance.framework.view.ToolBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:id="@+id/li"></LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0D94FF"></View>

    <com.flyco.tablayout.CommonTabLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="#ff0000"
        app:tl_iconHeight="30dp"
        app:tl_iconWidth="30dp"
        app:tl_textUnselectColor="#000000"
        android:id="@+id/common"></com.flyco.tablayout.CommonTabLayout>

</LinearLayout>