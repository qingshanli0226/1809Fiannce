<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.youth.banner.Banner
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="visible"
        android:id="@+id/banner"></com.youth.banner.Banner>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/tab"
            android:layout_weight="1"></com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:id="@+id/vp"></androidx.viewpager.widget.ViewPager>

    </LinearLayout>

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RadioButton
            android:textColor="@drawable/text_color"
            android:drawableTop="@mipmap/bottom01"
            android:button="@null"
            android:gravity="center"
            android:layout_width="0dp"
            android:text="首页"
            android:layout_height="match_parent"
            android:layout_weight="1"></RadioButton>

        <RadioButton
            android:textColor="@drawable/text_color"
            android:drawableTop="@mipmap/bottom03"
            android:button="@null"
            android:gravity="center"
            android:layout_width="0dp"
            android:text="投资"
            android:layout_height="match_parent"
            android:layout_weight="1"></RadioButton>

        <RadioButton
            android:textColor="@drawable/text_color"
            android:drawableTop="@mipmap/bottom05"
            android:button="@null"
            android:gravity="center"
            android:layout_width="0dp"
            android:text="我的资产"
            android:layout_height="match_parent"
            android:layout_weight="1"></RadioButton>

        <RadioButton
            android:textColor="@drawable/text_color"
            android:drawableTop="@mipmap/bottom07"
            android:button="@null"
            android:gravity="center"
            android:layout_width="0dp"
            android:text="更多"
            android:layout_height="match_parent"
            android:layout_weight="1"></RadioButton>

    </RadioGroup>


</LinearLayout>