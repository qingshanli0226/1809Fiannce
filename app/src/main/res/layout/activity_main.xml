<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.Welcome.WelcomeActivity"
    android:id="@+id/act_greet_rl">

    <com.example.framework.view.ToolBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:id="@+id/toolbar"
        android:visibility="gone"></com.example.framework.view.ToolBar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/start_background"
        android:scaleType="fitXY"></ImageView>


    <TextView
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/greet_text_round"
        android:textSize="15dp"
        android:text="@string/welocome_count_down"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/act_greet_down"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_10"></TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_dp_16"
        android:text="@string/my_original_version"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_100"
        android:gravity="center"
        android:id="@+id/act_greet_versionName"></TextView>

</RelativeLayout>