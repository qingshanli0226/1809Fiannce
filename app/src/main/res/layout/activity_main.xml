<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.example.framework.view.ToolBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:id="@+id/toolbar"></com.example.framework.view.ToolBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/ll"></LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/Prussianblue"></View>

    <com.flyco.tablayout.CommonTabLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:tl_textSelectColor="@color/Prussianblue"
        app:tl_iconHeight="@dimen/dp_30"
        app:tl_iconWidth="@dimen/dp_30"
        app:tl_textUnselectColor="@color/black"
        android:id="@+id/comm"></com.flyco.tablayout.CommonTabLayout>

</LinearLayout>