<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome.WelcomeActivity"
    android:id="@+id/act_greet_rl">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/start_background"
        android:scaleType="fitXY"></ImageView>


    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="@drawable/greet_text_round"
        android:textSize="15dp"
        android:text="倒计时:3 | 跳过"
        android:layout_alignParentRight="true"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/act_greet_down"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"></TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="当前版本：1.0"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:id="@+id/act_greet_versionName"></TextView>

</RelativeLayout>