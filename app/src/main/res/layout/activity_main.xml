<?xml version="1.0" encoding="utf-8"?>
<com.fiannce.bawei.a1809fiannce.event.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.fiannce.bawei.framework.view.ToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:rightIsShow="true"
        app:rightImage="@mipmap/mh"
        app:leftImg="@mipmap/mh"
        app:leftIsShow="false"
        app:titleText="首页"
        android:layout_height="60dp">
    </com.fiannce.bawei.framework.view.ToolBar>

    <TextView
        android:id="@+id/progressTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/toolbar">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="启动模式"
            android:id="@+id/startMode"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="接口回调"
            android:id="@+id/callBack"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录"
            android:id="@+id/login"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="连接管理"
            android:id="@+id/connectBtn"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="内存管理"
            android:id="@+id/menBtn"/>
    </LinearLayout>

    <com.fiannce.bawei.framework.view.ProgressView
        android:id="@+id/progressView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:textColor="@color/colorPrimary"
        app:circleWith="10"
        app:background="@mipmap/mh"
        android:layout_centerInParent="true"/>

</com.fiannce.bawei.a1809fiannce.event.MyRelativeLayout>