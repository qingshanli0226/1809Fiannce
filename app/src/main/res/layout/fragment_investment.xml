<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.investment.InvestmentFragment">

    <com.fiannce.framework.view.ToolBar
        android:id="@+id/toobar_fake"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Toolbar_layout_height"
        app:textcolor="@color/colorToolbar"
        app:titleText="@string/main_investment"></com.fiannce.framework.view.ToolBar>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/investment_TabLayout_layout_height"
        android:layout_weight="1"
        android:background="@color/colorInvestmentTabLayout"
        app:tabIndicatorColor="@color/colorInvestmentTabLayouttabIndicatorColor"
        app:tabIndicatorHeight="@dimen/investment_TabLayout_tabIndicatorHeight"
        app:tabSelectedTextColor="@color/colorInvestmentTabLayouttabSelectedTextColor"></com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/investment_ViewPager_layout_height"
        android:layout_weight="10"></androidx.viewpager.widget.ViewPager>
</LinearLayout>