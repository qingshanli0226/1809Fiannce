<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".main.fragment.investment.InvestmentFragment">

    <com.fiannce.bawei.framework.view.ToolBar
        app:titleText="投资"
        app:mbackground="#142732"
        app:ToolBar_titleTextColor="#239ECD"
        android:layout_width="wrap_content"
        android:background="#fff"
        android:id="@+id/toolbar"
        android:layout_height="40dp" />

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        app:tabSelectedTextColor="#f00"
        app:tabIndicatorColor="#14B4ED"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/Investment_TabLayout"

        />
    <com.fiannce.bawei.framework.view.mViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:id="@+id/Investment_view_pager"
        />
</LinearLayout>