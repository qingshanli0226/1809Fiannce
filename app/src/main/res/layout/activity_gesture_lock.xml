<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fiannce.bawei.gesturelock.GestureLockActivity">

    <com.fiannce.framework.view.ToolBar
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/toolbar"
        ></com.fiannce.framework.view.ToolBar>



    <TextView
        android:id="@+id/tv_current_passord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light" />

    <com.wangnan.library.GestureLockView
        android:id="@+id/glv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        app:normal_color="#CED4DF"
        app:press_color="#4772DF"
        app:error_color="#F43355"
        app:line_thickness="2dp" />


</FrameLayout>
