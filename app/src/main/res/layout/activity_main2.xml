<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mian.MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="@dimen/weight_10"
        android:id="@+id/main"
        android:orientation="vertical"></LinearLayout>
    <com.flyco.tablayout.CommonTabLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_weight="@dimen/weight_0.75"
        app:tl_textUnselectColor="#8c8c8c"
        app:tl_textSelectColor="#3883d1"
        app:tl_textsize="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:id="@+id/tab"></com.flyco.tablayout.CommonTabLayout>

</LinearLayout>