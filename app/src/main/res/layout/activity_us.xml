<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".many.activity.RegisterActivity">
    <com.example.framwork.view.TobView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:left_show="true"
        app:backgroundColor="#142732"
        app:textColor="#27b8ee"
        app:left_img="@mipmap/left"
        android:id="@+id/tob"
        app:text="用户注册"></com.example.framwork.view.TobView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                android:layout_weight="2"
                android:gravity="center"
                android:text="手机号："
                android:textColor="#000000"></TextView>
            <EditText
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:hint="请输入手机号"
                android:id="@+id/phone"
                android:layout_weight="8"></EditText>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="2"
            android:gravity="center"
            android:text="用户名："
            android:textColor="#000000"></TextView>
        <EditText
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:hint="请输入用户名"
            android:id="@+id/use"
            android:text="aaa"
            android:layout_weight="8"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="2"
            android:gravity="center"
            android:text="密码："

            android:textColor="#000000"></TextView>
        <EditText
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:hint="请输入密码"
            android:id="@+id/pwd"
            android:text="aaa"
            android:layout_weight="8"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="2"
            android:gravity="center"
            android:text="确认密码："
            android:textColor="#000000"></TextView>
        <EditText
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:hint="请输入手机号"
            android:layout_weight="8"></EditText>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <Button
            android:layout_width="@dimen/dp_230"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#27baed"
            android:text="注册"
            android:id="@+id/register"
            android:textColor="#ffffff"
            ></Button>
    </RelativeLayout>
</LinearLayout>