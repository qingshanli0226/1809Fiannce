<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/re"
    android:layout_height="match_parent"
    tools:context=".welcome.WelcomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:id="@+id/text"
        android:textSize="@dimen/px_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:layout_width="@dimen/px_150"
        android:layout_height="@dimen/px_150"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/pro"></ProgressBar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="倒计时：3"
        android:textSize="@dimen/px_50"
        android:layout_alignParentRight="true"
        android:textColor="@color/red"
        android:layout_margin="@dimen/px_50"
        android:id="@+id/time"></TextView>

</RelativeLayout>