<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".invest.InvestFragment"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="30dp"
        android:text="投资"
        android:textColor="#27B8EE"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#142732"></TextView>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/frag_invest_tab"
        app:tabTextColor="#DD000000"
        app:tabSelectedTextColor="#ff0000"
        app:tabBackground="@drawable/inves_tab_background"
        app:tabIndicatorHeight="0dp"></com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frag_invest_vp"
        ></androidx.viewpager.widget.ViewPager>

</LinearLayout>