<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".invest.InvestFragment"
    android:orientation="vertical">
    <com.example.framework.view.ToolBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:id="@+id/toolbar"
        app:wp_CenterTitle="@string/investment"
        ></com.example.framework.view.ToolBar>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:id="@+id/frag_invest_tab"
        app:tabTextColor="@color/pale_black"
        app:tabSelectedTextColor="@color/red"
        app:tabBackground="@drawable/inves_tab_background"
        app:tabIndicatorHeight="@dimen/dp_0"></com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frag_invest_vp"
        ></androidx.viewpager.widget.ViewPager>

</LinearLayout>