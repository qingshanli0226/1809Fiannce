<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".home.HomeFragment">
    <com.example.framwork.view.TobView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:backgroundColor="#142732"
        app:text="@string/home"
        app:textColor="#03A9F4"
        app:left_show="false"
        app:right_show="false"
        android:id="@+id/tob"
        ></com.example.framwork.view.TobView>

    <com.youth.banner.Banner
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:id="@+id/bar"></com.youth.banner.Banner>



    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_height="@dimen/dp_40">
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/weight_3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="@dimen/weight_1"
                android:gravity="right"
                android:textSize="@dimen/dp_30"
                android:id="@+id/name"></TextView>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/recommend"

            android:layout_gravity="center"
            android:layout_weight="@dimen/weight_05"></ImageView>
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/weight_1"></TextView>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerInParent="true">
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_1"></TextView>
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_2"
                android:text="@string/cash"
                android:gravity="center"
                android:background="@mipmap/home_attribute_bg"
                ></TextView>

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_2"
                android:layout_marginLeft="@dimen/dp_8"
                android:gravity="center"
                android:background="@mipmap/home_attribute_bg"
                android:text="@string/day"></TextView>
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_2"
                android:text="@string/high"
                android:layout_marginLeft="@dimen/dp_8"
                android:gravity="center"
                android:background="@mipmap/home_attribute_bg"
                ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/weight_1"></TextView>
        </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_3"
        android:layout_height="@dimen/dp_150">

        <com.example.a1809fiannce.view.CusView
            android:id="@+id/cus"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_130"
            android:layout_centerHorizontal="true"
            app:Color="#E91E63"
            app:textSize="@dimen/dp_30"></com.example.a1809fiannce.view.CusView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/dp_20"
            android:gravity="center"
            android:id="@+id/expect"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/weight_05"></TextView>
        <Button
            android:layout_width="@dimen/dp_0"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="match_parent"
            android:layout_weight="@dimen/weight_9"
            android:id="@+id/buy"
            android:background="#F44336"
            android:textSize="@dimen/dp_30"
            android:textColor="#ffffff"
            android:text="@string/homeBuy"></Button>
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/weight_05"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_height="@dimen/dp_30">
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/weight_3"></TextView>

        <ImageView
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="@dimen/weight_1"
            android:layout_centerVertical="true"
            android:src="@mipmap/guarantee_icon"></ImageView>
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/weight_6"
            android:text="@string/wind"
            android:textSize="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"></TextView>

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/weight_3"></TextView>
    </LinearLayout>

</LinearLayout>