<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:overScrollMode="always"
    tools:context=".home.HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100"
        android:background="@color/darkblue"
        android:gravity="center"
        android:text="@string/customTab_name1"
        android:textColor="@color/blue"
        android:textSize="@dimen/px_80"></TextView>

    <com.youth.banner.Banner
        android:id="@+id/bann"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_400"></com.youth.banner.Banner>

    <TextView
        android:id="@+id/home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px_50"
        android:drawableRight="@drawable/recommend"
        android:text="硅谷彩虹新手计划"
        android:textSize="@dimen/px_70"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80"
        android:layout_marginTop="@dimen/px_70">

        <TextView
            android:layout_width="@dimen/px_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/px_50"
            android:layout_weight="1"
            android:background="@drawable/home_frag_home"
            android:gravity="center"
            android:text="@string/Principal"
            android:textSize="@dimen/px_50"></TextView>

        <TextView
            android:layout_width="@dimen/px_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/px_10"
            android:layout_marginRight="@dimen/px_10"
            android:layout_weight="1"
            android:background="@drawable/home_frag_home"
            android:gravity="center"
            android:text="@string/plan"
            android:textSize="@dimen/px_50"></TextView>

        <TextView
            android:layout_width="@dimen/px_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/px_50"
            android:layout_weight="1"
            android:background="@drawable/home_frag_home"
            android:gravity="center"
            android:text="@string/yield"
            android:textSize="@dimen/px_50"></TextView>

    </LinearLayout>

    <com.example.framework.view.ProgressView
        android:id="@+id/pro"
        android:layout_width="@dimen/px_300"
        android:layout_height="@dimen/px_300"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px_60"
        app:PaintColor1="@color/bluegrey"
        app:PaintColor2="@color/pink"
        app:PaintSize="35"
        app:TextColor="@color/bluegrey"
        app:TextSize="80"></com.example.framework.view.ProgressView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_70"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px_30"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/expected"
            android:textSize="@dimen/px_60"></TextView>

        <TextView
            android:id="@+id/home_frag_yearRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0.00%"
            android:textSize="@dimen/px_60"></TextView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_150"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/px_40"
        android:layout_marginTop="@dimen/px_50"
        android:layout_marginRight="@dimen/px_40"
        android:layout_marginBottom="@dimen/px_30"
        android:background="@drawable/home_frag_but"
        android:gravity="center"
        android:text="@string/Immediatelytojoin"
        android:textColor="@color/white"
        android:textSize="@dimen/px_80"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/guarantee_icon"
        android:gravity="center"
        android:text="@string/mes"></TextView>

</LinearLayout>