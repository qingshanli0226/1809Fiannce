<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.home.HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#142732"
        android:gravity="center"
        android:text="首页"
        android:textColor="#27B8EE"
        android:textSize="35dp"></TextView>

    <com.youth.banner.Banner
        android:id="@+id/home_banner"
        android:layout_width="match_parent"
        android:layout_height="180dp"></com.youth.banner.Banner>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/home_tv1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="80dp"
            android:gravity="center"
            android:text="硅谷彩虹新手计划"
            android:textSize="30dp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/home_tv1"
            android:gravity="center"
            android:text="推荐"
            android:layout_marginLeft="20dp"
            android:textColor="#F44336"></TextView>
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"

    >

</LinearLayout>
    <com.Fiannce.myapplication.fragment.home.customView
        android:id="@+id/custom_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"></com.Fiannce.myapplication.fragment.home.customView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25dp"
        android:text="预期年利率：8.00%">
    </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="立即加入"
            android:gravity="center"
            android:textSize="40dp"
            android:background="#FB4257"
            android:textColor="#ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="风险保障金由有道银行监管"
        android:gravity="center"
        android:layout_marginTop="10dp"
        ></TextView>

</LinearLayout>