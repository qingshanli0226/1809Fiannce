<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment">

    <androidx.appcompat.widget.Toolbar
        android:background="#142732"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="首页"
            android:gravity="center"
            android:textColor="#27B8EE"
            android:textSize="25dp"></TextView>

    </androidx.appcompat.widget.Toolbar>

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"></com.youth.banner.Banner>

    <TextView
        android:textColor="@color/black"
        android:textSize="30dp"
        android:gravity="center"
        android:text="硅谷彩虹新手计划"
        android:layout_width="match_parent"
        android:layout_height="70dp"></TextView>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:background="@drawable/text_xingzhuang"
            android:text="本息保障"
            android:textSize="15sp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:gravity="center"
            android:background="@drawable/text_xingzhuang"
            android:textSize="15sp"
            android:text="每日计息"
            android:layout_marginLeft="20dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:gravity="center"
            android:background="@drawable/text_xingzhuang"
            android:textSize="15sp"
            android:text="高额收益"
            android:layout_marginLeft="20dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"></TextView>


    </LinearLayout>

    <com.example.myapplication.view.ProgressView
        android:layout_width="match_parent"
        android:id="@+id/progress_bar"
        app:textcolor="#DC143D"
        android:layout_marginTop="20dp"
        android:layout_height="100dp"></com.example.myapplication.view.ProgressView>

    <TextView
        android:textSize="20sp"
        android:gravity="center"
        android:text="预期年利率：8.00%"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
    </TextView>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="立即加入"
            android:background="#FB4257"
            android:layout_width="300dp"
            android:layout_height="wrap_content"></Button>
    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="风险保障金由有道银行监管"></TextView>

</LinearLayout>