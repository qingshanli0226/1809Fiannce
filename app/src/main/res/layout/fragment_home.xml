<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.example.net.TobView
            android:id="@+id/tob"
            android:background="#B6ADAD"
            android:gravity="center"
            android:text="首页"
            android:textSize="25sp"
            app:left_show="false"
            app:right_show="false"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.example.net.TobView>

    </LinearLayout>

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"></com.youth.banner.Banner>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_height="40dp"
        android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="硅谷彩虹新手计划"
                android:gravity="right"
                android:textSize="30dp"
                android:id="@+id/name"></TextView>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@mipmap/recommend"
            android:layout_gravity="center"></ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="本息保障"
            android:gravity="center"
            android:background="@mipmap/home_attribute_bg"
            ></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:background="@mipmap/home_attribute_bg"
            android:text="每日计息"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="高额收益"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:background="@mipmap/home_attribute_bg"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></TextView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_height="130dp">

        <com.example.fiannce.custom_view.CustomView_HomeFragment
            android:id="@+id/customview"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
            app:textSize="30"
            app:color="#E91E63"></com.example.fiannce.custom_view.CustomView_HomeFragment>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="123"
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/expect"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"></TextView>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:id="@+id/buy"
            android:background="@mipmap/home"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:text="立即购买"></Button>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"></TextView>
    </LinearLayout>

</LinearLayout>