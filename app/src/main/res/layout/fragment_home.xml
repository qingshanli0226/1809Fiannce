<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/toolbar"
            android:background="#142732"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
            >
        </androidx.appcompat.widget.Toolbar>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textSize="30dp"
            android:textColor="#229AC7"
            android:layout_gravity="center"

            ></TextView>
    </FrameLayout>


    <com.youth.banner.Banner
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:id="@+id/banner"
        ></com.youth.banner.Banner>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/guigu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="25dp"></TextView>
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/recommend"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        >
        <TextView
            android:textSize="15dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="本息保障"
            android:background="@drawable/tuoyuan"
            android:gravity="center"
            ></TextView>
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="100dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:text="每日计息"
            android:background="@drawable/tuoyuan"
            android:gravity="center"
            ></TextView>
        <TextView
            android:textSize="15dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="高额收益"
            android:background="@drawable/tuoyuan"
            android:gravity="center"
            ></TextView>

    </LinearLayout>


    <com.fiannce.framework.view.ProgressView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:id="@+id/progress"
        android:layout_marginTop="20dp"
        ></com.fiannce.framework.view.ProgressView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="预期年利率："
            android:textSize="25dp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/yuqi"
            android:textSize="25dp"
            >
        </TextView>
    </LinearLayout>



    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt"
        android:text="立即加入"
        android:layout_gravity="center"
        android:background="#FB4257"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_marginTop="25dp"
        ></Button>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        >
        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:src="@drawable/guarantee_icon"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风险保障金由有道银行监管"
            ></TextView>
    </LinearLayout>

</LinearLayout>