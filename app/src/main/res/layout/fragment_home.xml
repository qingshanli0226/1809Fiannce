<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.fragment.HomeFragment"
    android:gravity="center_horizontal"
    android:background="#fff"
   >
    <com.fiannce.bawei.framework.view.ToolBar
        app:titleText="首页"
        app:mbackground="#142732"
        android:id="@+id/toolbar"
        app:ToolBar_titleTextColor="#239ECD"
        android:layout_width="wrap_content"
        android:background="#fff"
        android:layout_height="40dp"
     />

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"></com.youth.banner.Banner>

    <TextView
        android:textColor="@color/black"
        android:textSize="30dp"
        android:gravity="center"
        android:text="硅谷彩虹新手计划"
        android:layout_width="match_parent"
        android:layout_height="70dp"></TextView>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:background="@drawable/text_xingzhuang"
            android:text="本息保障"
            android:textSize="15sp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:gravity="center"
            android:background="@drawable/text_xingzhuang"
            android:textSize="15sp"
            android:text="每日计息"
            android:layout_marginLeft="20dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:gravity="center"
            android:background="@drawable/text_xingzhuang"
            android:textSize="15sp"
            android:text="高额收益"
            android:layout_marginLeft="20dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>



    <com.fiannce.bawei.framework.view.ProgressView
            android:layout_width="match_parent"
            android:id="@+id/progress_bar"
            android:layout_marginTop="20dp"
            android:layout_height="100dp"

        >
        </com.fiannce.bawei.framework.view.ProgressView>

    <TextView
        android:textSize="20sp"
        android:gravity="center"
        android:text="预期年利率：8.00%"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
    </TextView>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="立即加入"
            android:background="#FB4257"
            android:layout_width="300dp"
            android:layout_height="wrap_content"></Button>
    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="风险保障金由有道银行监管"></TextView>

</LinearLayout>