<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:overScrollMode="always"
    tools:context=".home.HomeFragment">

<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="@dimen/dp_100"-->
<!--        android:background="@color/darkblue"-->
<!--        android:gravity="center"-->
<!--        android:text="@string/customTab_name1"-->
<!--        android:textColor="@color/blue"-->
<!--        android:textSize="@dimen/dp_80"></TextView>-->

    <com.example.framework.view.ToolBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:titleText="@string/customTab_name1"
        android:id="@+id/toolbar"
        android:background="@color/darkblue"
        ></com.example.framework.view.ToolBar>


    <com.youth.banner.Banner
        android:id="@+id/bann"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"></com.youth.banner.Banner>

    <TextView
        android:id="@+id/home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:drawableRight="@drawable/recommend"
        android:text="硅谷彩虹新手计划"
        android:textSize="@dimen/dp_35"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/home_frag_home"
            android:gravity="center"
            android:text="@string/Principal"
            android:textSize="@dimen/dp_20"></TextView>

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/home_frag_home"
            android:gravity="center"
            android:text="@string/plan"
            android:textSize="@dimen/dp_20"></TextView>

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/home_frag_home"
            android:gravity="center"
            android:text="@string/yield"
            android:textSize="@dimen/dp_20"></TextView>

    </LinearLayout>

    <com.example.framework.view.ProgressView
        android:id="@+id/pro"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_300"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        app:PaintColor1="@color/bluegrey"
        app:PaintColor2="@color/pink"
        app:PaintSize="25"
        app:TextColor="@color/bluegrey"
        app:TextSize="80"></com.example.framework.view.ProgressView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/expected"
            android:textSize="@dimen/dp_25"></TextView>

        <TextView
            android:id="@+id/home_frag_yearRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0.00%"
            android:textSize="@dimen/dp_25"></TextView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/home_frag_but"
        android:gravity="center"
        android:text="@string/Immediatelytojoin"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_40"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/guarantee_icon"
        android:gravity="center"
        android:text="@string/mes"></TextView>

</LinearLayout>