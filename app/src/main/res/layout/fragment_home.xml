    <com.fiannce.framework.view.ToolBar
        android:layout_width="match_parent"
        app:titleText="@string/activity_home"
        android:id="@+id/toolbar"
        android:layout_height="@dimen/fourty"></com.fiannce.framework.view.ToolBar>


    <com.youth.banner.Banner
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_handured_ninety"
        android:id="@+id/banner"
        ></com.youth.banner.Banner>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/guigu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_mid_size"
            android:textSize="@dimen/twenty_five"></TextView>
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/recommend"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/eight"
            >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        >
        <TextView
            android:textSize="@dimen/fifteen"
            android:layout_width="@dimen/one_hurdured"
            android:layout_height="wrap_content"
            android:text="@string/principal_and_interest_security"
            android:background="@drawable/tuoyuan"
            android:gravity="center"
            ></TextView>
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/one_hurdured"
            android:textSize="@dimen/fifteen"
            android:layout_height="wrap_content"
            android:text="@string/the_daily_rate"
            android:background="@drawable/tuoyuan"
            android:gravity="center"
            ></TextView>
        <TextView
            android:textSize="@dimen/fifteen"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/one_hurdured"
            android:layout_height="wrap_content"
            android:text="@string/high_yield"
            android:background="@drawable/tuoyuan"
            android:gravity="center"
            ></TextView>

    </LinearLayout>


    <com.fiannce.framework.view.ProgressView
        android:layout_width="@dimen/one_hurdured"
        android:layout_height="@dimen/one_hurdured"
        android:layout_gravity="center"
        android:id="@+id/progress"
        android:layout_marginTop="@dimen/text_mid_size"
        ></com.fiannce.framework.view.ProgressView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fifteen"
            android:text="@string/expected_annual_interest_rate_1"
            android:textSize="@dimen/twenty_five"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fifteen"
            android:id="@+id/yuqi"
            android:textSize="@dimen/twenty_five"
            >
        </TextView>
    </LinearLayout>



    <Button
        android:layout_width="@dimen/two_hundred_fifty"
        android:layout_height="wrap_content"
        android:id="@+id/bt"
        android:text="@string/join"
        android:layout_gravity="center"
        android:background="@color/colorRedshen"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/twenty_five"
        android:layout_marginTop="@dimen/twenty_five"
        ></Button>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        >
        <ImageView
            android:layout_width="@dimen/fifteen"
            android:layout_height="@dimen/text_mid_size"
            android:src="@drawable/guarantee_icon"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bank"
            ></TextView>
    </LinearLayout>

</LinearLayout>