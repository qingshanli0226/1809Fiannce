<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment">

    <com.example.framework.view.ToolBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        app:titleTextColor="@color/small_blue"
        android:id="@+id/toolbar"
        app:titleText="首页"></com.example.framework.view.ToolBar>

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_banner_height"></com.youth.banner.Banner>

    <TextView
        android:textColor="@color/black"
        android:textSize="@dimen/big_text_size"
        android:gravity="center"
        android:text="@string/home_title_fragment"
        android:layout_marginTop="@dimen/big_text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:background="@drawable/text_xingzhuang"
            android:text="@string/home_buttonone_fragment"
            android:textSize="@dimen/size_fiften"
            android:layout_width="@dimen/size_ninting"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:gravity="center"
            android:background="@drawable/text_xingzhuang"
            android:textSize="@dimen/size_fiften"
            android:text="每日计息"
            android:layout_marginLeft="@dimen/size_twetwl"
            android:layout_width="@dimen/size_ninting"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:gravity="center"
            android:background="@drawable/text_xingzhuang"
            android:textSize="@dimen/size_fiften"
            android:text="高额收益"
            android:layout_marginLeft="@dimen/size_twetwl"
            android:layout_width="@dimen/size_ninting"
            android:layout_height="wrap_content"></TextView>


    </LinearLayout>

    <com.example.framework.view.ProgressView
        android:layout_width="match_parent"
        android:id="@+id/progress_bar"
        app:textcolor="#DC143D"
        android:layout_marginTop="@dimen/size_twetwl"
        android:layout_height="100dp"></com.example.framework.view.ProgressView>

    <TextView
        android:textSize="20sp"
        android:gravity="center"
        android:text="预期年利率：8.00%"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
    </TextView>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:textColor="@color/white"
            android:textSize="@dimen/text_mid_size"
            android:text="立即加入"
            android:background="@color/big_red"
            android:layout_width="@dimen/size_three_harend"
            android:layout_height="wrap_content"></Button>
    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/toolbar_margin_size"
        android:textSize="@dimen/size_fivting"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="风险保障金由有道银行监管"></TextView>

</LinearLayout>