<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment">
    <com.example.network.TobView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:backgroundColor="#142732"
        app:text="首页"
        app:textColor="#03A9F4"
        app:left_show="false"
        app:right_show="false"
        android:id="@+id/tob1"
        ></com.example.network.TobView>

    <com.youth.banner.Banner
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/bar"></com.youth.banner.Banner>



    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="30dp"
                android:id="@+id/name"></TextView>
        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:src="@mipmap/recommend"

            android:layout_gravity="center"
            android:layout_weight="0.5"></ImageView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></TextView>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="本息保障"
                android:gravity="center"
                android:background="@mipmap/home_attribute_bg"
                ></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:background="@mipmap/home_attribute_bg"
                android:text="每日计息"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="高额收益"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:background="@mipmap/home_attribute_bg"
                ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></TextView>
        </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_height="130dp">

        <com.example.a1809fiannce.view.CusView
            android:id="@+id/cus"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            app:Color="#E91E63"
            app:textSize="30"></com.example.a1809fiannce.view.CusView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="aaaa"
            android:textSize="25dp"
            android:gravity="center"
            android:id="@+id/expect"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"></TextView>
        <Button
            android:layout_width="0dp"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:id="@+id/buy"
            android:background="#F44336"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:text="立即购买"></Button>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></TextView>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:src="@mipmap/guarantee_icon"></ImageView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="风险保证金由有道银行监管"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></TextView>
    </LinearLayout>

</LinearLayout>