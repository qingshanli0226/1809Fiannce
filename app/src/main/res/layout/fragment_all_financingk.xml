<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.finance.zg6.main.investment.allfiannce.AllFinanceFragment">

    <com.finance.zg6.view.horseRaceLampView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_grey"
        android:text="@string/horseRaceLampView_text"
        android:textColor="@color/colorRed"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:layout_below="@+id/toolbar"
        android:textSize="@dimen/big_text_size"
        android:id="@+id/all_txt"
        ></com.finance.zg6.view.horseRaceLampView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/all_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/all_finance_rv"></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>