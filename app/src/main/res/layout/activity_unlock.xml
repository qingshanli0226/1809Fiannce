<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.more.password.UnlockActivity"
    android:background="@color/french_grey"
    android:orientation="vertical">

    <com.example.framework.view.ToolBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:id="@+id/toolbar"></com.example.framework.view.ToolBar>


    <com.wangnan.library.GestureLockThumbnailView
        android:layout_width="@dimen/dp_50"
        android:layout_margin="@dimen/dp_10"
        android:layout_gravity="center"
        android:layout_height="@dimen/dp_50"
        android:id="@+id/act_inlock_gtv"></com.wangnan.library.GestureLockThumbnailView>

    <com.wangnan.library.GestureLockView
        android:id="@+id/act_inlock_glv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:line_thickness="@dimen/dp_10"
        app:press_color="@color/colorA"
        app:error_color="@color/dark_red"
        android:layout_centerInParent="true"
        app:is_use_animation="true"
        app:animation_scale_mode="reverse"></com.wangnan.library.GestureLockView>

</LinearLayout>