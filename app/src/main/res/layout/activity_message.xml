<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".usermessage.MessageActivity">
    <com.example.framwork.view.TobView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:left_show="true"
        app:right_show="false"
        app:text="@string/us_message"
        app:textColor="#03A9F4"
        app:backgroundColor="#142732"
        android:id="@+id/tob"
        app:left_img="@mipmap/left"></com.example.framwork.view.TobView>
    <ImageView
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:id="@+id/mess_img"
        android:src="@mipmap/my_user_default"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_gravity="center"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_message"
        android:textColor="#03A9F4"
        android:textSize="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center"
        android:id="@+id/head"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#999999"
            android:layout_marginTop="@dimen/dp_20"></LinearLayout>
    <Button
        android:layout_width="@dimen/dp_270"
        android:layout_height="wrap_content"
        android:text="@string/out_log"
        android:layout_gravity="center"
        android:background="#03A9F4"
        android:layout_marginTop="@dimen/dp_40"
        android:textColor="#ffffff"
        android:textSize="@dimen/dp_25"
        android:id="@+id/out"></Button>
</LinearLayout>