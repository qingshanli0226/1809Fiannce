<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/two"
          android:background="#eee"></View>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/fivety"
          android:gravity="center">

          <TextView
              android:id="@+id/alltitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/twenty"
              android:text="新手福利计划"></TextView>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:text=">"></TextView>
      </RelativeLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/two"
          android:background="#eee"></View>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/ten"
              android:layout_marginRight="@dimen/fourty"
              android:orientation="vertical">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/ten"
                  android:text="产品金额"></TextView>


              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/ten">

                  <TextView
                      android:id="@+id/allonemoney"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#f00"></TextView>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="万"></TextView>
              </LinearLayout>

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/ten">

                  <ImageView
                      android:layout_width="@dimen/twenty"
                      android:layout_height="@dimen/twenty"
                      android:src="@mipmap/ic_launcher"></ImageView>

                  <TextView
                      android:id="@+id/allonenum"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      ></TextView>
              </LinearLayout>
          </LinearLayout>
          <!--      第二  -->
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/ten"
              android:layout_marginRight="@dimen/fourty"
              android:orientation="vertical">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/ten"
                  android:text="预期年利率"></TextView>


              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/ten">

                  <TextView
                      android:id="@+id/alltwopercentage"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="8.00"
                      android:textColor="#f00"></TextView>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="%"></TextView>
              </LinearLayout>

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/ten">

                  <ImageView
                      android:layout_width="@dimen/twenty"
                      android:layout_height="@dimen/twenty"
                      android:src="@mipmap/ic_launcher"></ImageView>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="本息保障"></TextView>
              </LinearLayout>
          </LinearLayout>
          <!--    第三    -->

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/ten"
              android:orientation="vertical">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/ten"
                  android:text="锁定期"></TextView>


              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/ten">

                  <TextView
                      android:id="@+id/allthreeday"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#f00"></TextView>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="天"></TextView>
              </LinearLayout>

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/ten">

                  <ImageView
                      android:layout_width="@dimen/twenty"
                      android:layout_height="@dimen/twenty"
                      android:src="@mipmap/ic_launcher"></ImageView>

                  <TextView
                      android:id="@+id/allthreenum"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"></TextView>
              </LinearLayout>
          </LinearLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">
              <com.fiance.framework.MyView.MyView
                  android:layout_width="@dimen/sixty"
                  android:layout_centerInParent="true"
                  android:id="@+id/allmyview"
                  android:layout_height="@dimen/sixty"
                  android:layout_gravity="center"
                  android:layout_marginLeft="@dimen/ten"></com.fiance.framework.MyView.MyView>

          </RelativeLayout>
      </LinearLayout>
  </LinearLayout>
    <Button
        android:layout_width="@dimen/engity"
        android:layout_height="@dimen/onehundred"
        android:layout_marginTop="@dimen/fivety"

        android:text="删除"
        android:id="@+id/btn"
        android:textColor="#ffffff"
        android:background="#ff0000"></Button>
</LinearLayout>