<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:id="@+id/tit"></TextView>
            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/right"
                android:layout_alignParentRight="true"></ImageView>
        </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_gravity="center"
            android:background="#e5e5e5"></LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="bottom"
            android:layout_height="@dimen/dp_85">

            <LinearLayout
                android:layout_width="@dimen/dp_84"
                android:layout_height="@dimen/dp_75"
                android:layout_marginLeft="@dimen/dp_10"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product"></TextView>

                <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#E91E63"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_3">

                    <LinearLayout
                        android:layout_width="@dimen/dp_3"
                        android:layout_height="@dimen/dp_25"
                        android:background="#e5e5e5"></LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:src="@mipmap/manage_list_count"></ImageView>

                    <TextView
                        android:id="@+id/TouMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"></TextView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_88"
                android:layout_height="@dimen/dp_80"
                android:layout_marginLeft="@dimen/dp_15"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/year"></TextView>

                <TextView
                    android:id="@+id/Year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#E91E63"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="@dimen/dp_3"
                        android:layout_height="@dimen/dp_25"
                        android:background="#e5e5e5"></LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:src="@mipmap/manage_list_guarantee"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/cash"
                        android:textSize="@dimen/dp_11"></TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_87"
                android:layout_height="@dimen/dp_80"
                android:layout_marginLeft="@dimen/dp_15"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/lockup"></TextView>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#E91E63"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="@dimen/dp_3"
                        android:layout_height="@dimen/dp_25"
                        android:background="#e5e5e5"></LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:src="@mipmap/manage_list_member"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/num"
                        android:textSize="@dimen/dp_15"></TextView>
                </LinearLayout>
            </LinearLayout>
            <com.example.a1809fiannce.view.CusView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cusView"
                app:Color="#03A9F4"
                ></com.example.a1809fiannce.view.CusView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#27b8ee"
            android:layout_height="@dimen/dp_12"

            ></LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="@dimen/dp_100"
        android:layout_height="match_parent"
        android:text="@string/del"
        android:background="@color/red"
        android:textColor="#ffffff"
        android:id="@+id/remBtn"
        ></Button>
</LinearLayout>