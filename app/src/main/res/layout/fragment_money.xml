<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.MoneyFragment">
    <com.example.framework.view.ToolBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:id="@+id/toolbar"
        app:titleTextColor="@color/small_blue"
        app:titleText="投资"></com.example.framework.view.ToolBar>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        app:tabSelectedTextColor="@color/reddd"
        app:tabIndicatorColor="@color/small_blue"
        android:id="@+id/money_tab"
        app:tabIndicatorHeight="@dimen/welcome_text_size"
        android:layout_height="@dimen/welcome_text_size"></com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:id="@+id/money_vp"
        android:layout_height="match_parent"></androidx.viewpager.widget.ViewPager>

</LinearLayout>