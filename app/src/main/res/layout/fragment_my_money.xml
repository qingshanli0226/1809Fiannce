<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.mymoneyfragment.MyMoneyFragment">

    <com.example.net.ToolBarView
        android:id="@+id/tob"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:text="更多"
        android:background="#8E8B8B"
        app:textColor="#fff"></com.example.net.ToolBarView>

    <LinearLayout
        android:background="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:src="@mipmap/my_user_default"
            android:layout_width="100dp"
            android:layout_height="100dp"></ImageView>

    </LinearLayout>

    <LinearLayout
        android:background="#F6F7F8"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical">

        <TextView
            android:textColor="#FB0404"
            android:text="学习提示:"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:text="充值我们将以集成支付宝sdk支付金额演示充值功能"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:text="提现业务:在判p2p金融平台中,提现都不是实时到账的，而是审核提现，系统将会告知24小时内进行转账，如果未收到，请联系克服"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/my_recharge_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"></ImageView>

            <ImageView
                android:src="@mipmap/my_withdraw_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"></ImageView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <ImageView
            android:src="@mipmap/my_invest_manage"
            android:layout_width="30dp"
            android:layout_height="30dp"></ImageView>

        <TextView
            android:text="投资管理"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <ImageView
            android:layout_marginLeft="220dp"
            android:src="@mipmap/right"
            android:layout_width="30dp"
            android:layout_height="30dp"></ImageView>

    </LinearLayout>

</LinearLayout>