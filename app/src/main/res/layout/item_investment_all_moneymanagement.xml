<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80">

        <TextView
            android:id="@+id/all_investment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="默认值"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/px_30"
            android:textSize="@dimen/px_40"></TextView>

        <ImageView
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_40"
            android:src="@drawable/right"
            android:layout_marginRight="@dimen/px_30"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"></ImageView>

    </RelativeLayout>

    <View
        android:layout_width="@dimen/px_1000"
        android:background="@color/gray"
        android:layout_gravity="center"
        android:layout_height="@dimen/px_1"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="@dimen/px_750"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/px_30"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Amount"></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/px_10"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="@color/pink"
                        android:id="@+id/all_investment_money"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/myriad"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/px_20"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="@dimen/px_5"
                        android:layout_height="@dimen/px_20"
                        android:background="@color/gray"></View>

                    <ImageView
                        android:layout_width="@dimen/px_40"
                        android:layout_height="@dimen/px_40"
                        android:layout_marginLeft="@dimen/px_10"
                        android:src="@drawable/manage_list_count"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:layout_marginLeft="@dimen/px_10"
                        android:id="@+id/all_investment_minTouMoney"></TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/px_30"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/px_100"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expected"></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/px_10"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="@color/pink"
                        android:id="@+id/all_investment_yeatRate"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/myriad"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/px_20"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="@dimen/px_5"
                        android:layout_height="@dimen/px_20"
                        android:background="@color/gray"></View>

                    <ImageView
                        android:layout_width="@dimen/px_40"
                        android:layout_height="@dimen/px_40"
                        android:layout_marginLeft="@dimen/px_10"
                        android:src="@drawable/manage_list_guarantee"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/interest"
                        android:layout_marginLeft="@dimen/px_10"></TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/px_30"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/px_140"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_20"
                    android:text="@string/lockup"></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/px_10"
                    android:layout_marginLeft="@dimen/px_40"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="@color/pink"
                        android:id="@+id/all_investment_suodingDays"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/myriad"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/px_20"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="@dimen/px_5"
                        android:layout_height="@dimen/px_20"
                        android:background="@color/gray"></View>

                    <ImageView
                        android:layout_width="@dimen/px_40"
                        android:layout_height="@dimen/px_40"
                        android:layout_marginLeft="@dimen/px_10"
                        android:src="@drawable/manage_list_member"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:layout_marginLeft="@dimen/px_10"
                        android:id="@+id/all_investment_memberNum"></TextView>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">

            <com.example.framework.view.ProgressView
                android:layout_width="@dimen/px_140"
                android:layout_height="@dimen/px_140"
                app:TextColor="@color/blue"
                app:PaintColor1="@color/gray"
                app:PaintColor2="@color/blue"
                app:PaintSize="15"
                android:id="@+id/all_investment_progress"></com.example.framework.view.ProgressView>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_30"
        android:layout_marginTop="@dimen/px_20"
        android:background="#03A9F4"></View>

</LinearLayout>