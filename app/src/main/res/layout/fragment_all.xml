<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/allbackgroundcolor"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.invesfragment.AllFragment">

    <com.example.framework.myview.MyText
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/trotting"
        android:textColor="@color/red"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="25dp"></com.example.framework.myview.MyText>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>


</LinearLayout>