<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.more.MoreFragment"
    android:orientation="vertical">

    <com.example.framework.view.ToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        app:wp_CenterTitle="更多"></com.example.framework.view.ToolBar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@color/ashen"
        android:id="@+id/frag_more_user_rigister">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/userRegister"

            android:drawableLeft="@drawable/icon_more_regist"
            android:textColor="@color/dark_blue"
            android:drawablePadding="@dimen/dp_10"
            android:textSize="@dimen/dp_25"></TextView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkAshen"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@color/ashen">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/gesturePassword"
            android:drawableLeft="@drawable/icon_more_secret"
            android:textColor="@color/dark_blue"
            android:drawablePadding="@dimen/dp_10"
            android:textSize="@dimen/dp_25"></TextView>

        <ImageView
            android:padding="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/toggle_off"
            android:layout_alignParentRight="true"
            android:id="@+id/frag_more_pwd_off"></ImageView>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkAshen"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@color/ashen"
        android:id="@+id/frag_more_verify_pwd">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/resetTheGesturePassword"
            android:drawableLeft="@drawable/icon_more_reset"
            android:textColor="@color/dark_blue"
            android:drawablePadding="@dimen/dp_10"
            android:textSize="@dimen/dp_25"></TextView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkAshen"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@color/ashen"
        android:id="@+id/frag_more_phone_call">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/contactCustomer"
            android:drawableLeft="@drawable/icon_more_contact"
            android:textColor="@color/dark_blue"
            android:drawablePadding="@dimen/dp_10"
            android:textSize="@dimen/dp_25"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/dark_red"
            android:text="@string/contactCustomerPhone"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_15"></TextView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkAshen"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@color/ashen">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/userFeedback"
            android:drawableLeft="@drawable/icon_more_sms"
            android:textColor="@color/dark_blue"
            android:drawablePadding="@dimen/dp_10"
            android:textSize="@dimen/dp_25"></TextView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkAshen"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@color/ashen">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/friendsShare"
            android:drawableLeft="@drawable/icon_more_share"
            android:textColor="@color/dark_blue"
            android:drawablePadding="@dimen/dp_10"
            android:textSize="@dimen/dp_25"></TextView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkAshen"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@color/ashen"
        android:id="@+id/frag_more_openapk">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/aboutYoudao"
            android:drawableLeft="@drawable/icon_more_about"
            android:textColor="@color/dark_blue"
            android:drawablePadding="@dimen/dp_10"
            android:textSize="@dimen/dp_25"></TextView>
    </RelativeLayout>


</LinearLayout>