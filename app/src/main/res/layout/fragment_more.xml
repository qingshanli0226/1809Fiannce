<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMoreLinearLayoutBackground"
    android:orientation="vertical"
    tools:context=".fragment.more.MoreFragment">

    <com.fiannce.framework.view.ToolBar
        android:id="@+id/toobar_fake"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Toolbar_layout_height"
        app:textcolor="@color/colorToolbar"
        app:titleText="@string/main_more"></com.fiannce.framework.view.ToolBar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/more_linearLayout_one_layout_height"
        android:background="@color/colorMoreLinearLayoutBackground"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/user_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/more_linearLayout_two_layout_height"
            android:layout_weight="1"
            android:background="@drawable/property_bro_deposit"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_more_regist"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="用户注册"
                android:textColor="#6B7CA6"
                android:textSize="25dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/more_linearLayout_two_layout_height"
            android:layout_weight="1"
            android:background="@drawable/property_bro_deposit"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_more_secret"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="手势密码"
                android:textColor="#6B7CA6"
                android:textSize="25dp"></TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:src="@drawable/toggle_off"></ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/more_linearLayout_two_layout_height"
            android:layout_weight="1"
            android:background="@drawable/property_bro_deposit"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_more_reset"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="重置手势密码"
                android:textColor="#6B7CA6"
                android:textSize="25dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/more_linearLayout_two_layout_height"
            android:layout_weight="1"
            android:background="@drawable/property_bro_deposit"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_more_contact"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="联系客服"
                android:textColor="#6B7CA6"
                android:textSize="25dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/more_linearLayout_two_layout_height"
            android:layout_weight="1"
            android:background="@drawable/property_bro_deposit"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_more_sms"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="用户反馈"
                android:textColor="#6B7CA6"
                android:textSize="25dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/more_linearLayout_two_layout_height"
            android:layout_weight="1"
            android:background="@drawable/property_bro_deposit"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_more_share"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="分享给好友"
                android:textColor="#6B7CA6"
                android:textSize="25dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/more_linearLayout_two_layout_height"
            android:layout_weight="1"
            android:background="@drawable/property_bro_deposit"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_more_about"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="关于有道理财"
                android:textColor="#6B7CA6"
                android:textSize="25dp"></TextView>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>