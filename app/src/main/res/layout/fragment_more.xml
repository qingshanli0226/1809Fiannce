<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.more.MoreFragment">

    <com.example.framework.view.ToolBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:id="@+id/toolbar"
        app:titleTextColor="@color/small_blue"
        app:titleText="更多"></com.example.framework.view.ToolBar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_dp_80dp">

            <ImageView
                android:layout_marginTop="@dimen/dm_dp_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_more_regist"></ImageView>
            
            <TextView
                android:id="@+id/person_register"
                android:textColor="@color/mondel_blue"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/dm_dp_30dp"
                android:layout_marginTop="@dimen/dm_dp_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户注册"></TextView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_dp_1dp"
            android:background="@color/graty"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_dp_80dp">

            <ImageView
                android:layout_marginTop="@dimen/dm_dp_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_more_secret"></ImageView>

            <TextView
                android:textColor="@color/mondel_blue"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/dm_dp_30dp"
                android:layout_marginTop="@dimen/dm_dp_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/person_password"></TextView>

            <ImageView
                android:id="@+id/showImg"
                android:layout_marginLeft="@dimen/dm_dp_130dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/toggle_off"></ImageView>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_dp_1dp"
            android:background="@color/graty"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_dp_80dp">

            <ImageView
                android:layout_marginTop="@dimen/dm_dp_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_more_reset"></ImageView>

            <TextView
                android:id="@+id/reset_password"
                android:textColor="@color/mondel_blue"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/dm_dp_30dp"
                android:layout_marginTop="@dimen/dm_dp_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/person_chongzhi_pwd"></TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_dp_1dp"
            android:background="@color/graty"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_dp_80dp">

            <ImageView
                android:layout_marginTop="@dimen/dm_dp_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_more_contact"></ImageView>

            <TextView
                android:textColor="@color/mondel_blue"
                android:id="@+id/call_person"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/dm_dp_30dp"
                android:layout_marginTop="@dimen/dm_dp_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/person_kefu"></TextView>

            <TextView
                android:layout_marginTop="@dimen/dm_dp_20dp"
                android:textSize="@dimen/dm_dp_20dp"
                android:layout_marginLeft="@dimen/dm_dp_100dp"
                android:layout_width="wrap_content"
                android:text="010-56253852"
                android:textColor="@color/reddd"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_dp_1dp"
            android:background="@color/graty"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_dp_80dp">

            <ImageView
                android:layout_marginTop="@dimen/dm_dp_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_more_sms"></ImageView>

            <TextView
                android:textColor="@color/mondel_blue"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/dm_dp_30dp"
                android:layout_marginTop="@dimen/dm_dp_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/person_message"></TextView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_dp_1dp"
            android:background="@color/graty"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_dp_80dp">

            <ImageView
                android:layout_marginTop="@dimen/dm_dp_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_more_share"></ImageView>

            <TextView
                android:textColor="@color/mondel_blue"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/dm_dp_30dp"
                android:layout_marginTop="@dimen/dm_dp_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/person_share"></TextView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_dp_1dp"
            android:background="@color/graty"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_dp_80dp">

            <ImageView
                android:layout_marginTop="@dimen/dm_dp_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_more_about"></ImageView>

            <TextView
                android:textColor="@color/mondel_blue"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/dm_dp_30dp"
                android:layout_marginTop="@dimen/dm_dp_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/person_about"></TextView>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>